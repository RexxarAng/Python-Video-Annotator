#:import rgba kivy.utils.get_color_from_hex
#:import VideoAnnotationScreen screens.video_annotation_screen
<ContentNavigationDrawer>
    ScrollView:
        MDList:
            id: md_list
            OneLineAvatarListItem:
                text: "Annotator"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Annotator"
                    app.open_annotator()
                IconLeftWidget:
                    icon: "file"
            OneLineAvatarListItem:
                text: "Open Video"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Video"
                    app.file_manager_open()
                IconLeftWidget:
                    icon: "video"
            OneLineAvatarListItem:
                text: "Verify"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Verify"
                IconLeftWidget:
                    icon: "video"

MDBoxLayout:
    orientation: "vertical"
    md_bg_color: rgba("#202225")
    MDToolbar:
        id: toolbar
        title: "Video Annotator"
        md_bg_color: rgba("#34373C")
        pos_hint: {"top": 1}
        elevation: 5
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:
        height: root.height
        ScreenManager:
            id: screen_manager

            Screen:
                id: annotator_screen
                name: "Annotator"

            Screen:
                id: video
                name: "Video"
                MDBoxLayout:
                    orientation: "vertical"

                    MDBoxLayout:
                        md_bg_color: rgba('#adadad')
                        orientation: "horizontal"
                        size_hint: 1, .1
                        MDIconButton:
                            font_size: 48
                            icon: "pencil"

                    Image:
                        id: image
                        size_hint: .8, 1

                    Slider:
                        id: slider
                        orientation: 'horizontal'
                        step: 1
                        size_hint: .9, .05
                    Label:
                        size_hint: .9, .05
                        text: str(slider.value)

            Screen:
                id: verify_page
                name: "Verify"
                MDLabel:
                    text: "Verify Page"
                    font_size: 32
                    halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer