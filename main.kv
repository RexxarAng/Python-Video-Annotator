#:import rgba kivy.utils.get_color_from_hex
#:import VideoAnnotationScreen screens.video_annotation_screen
<ContentNavigationDrawer>
    ScrollView:
        MDList:
            id: md_list
            OneLineAvatarListItem:
                text: "Annotator"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "Annotator"
                    app.open_annotator()
                IconLeftWidget:
                    icon: "file"
            OneLineAvatarListItem:
                text: "Open Video"
                on_press:
                    root.nav_drawer.set_state("close")
                    app.file_manager_open()
                IconLeftWidget:
                    icon: "video"

MDBoxLayout:
    orientation: "vertical"
    md_bg_color: rgba("#202225")
    MDToolbar:
        id: toolbar
        title: "Video Annotator"
        md_bg_color: rgba("#34373C")
        pos_hint: {"top": 1}
        elevation: 5
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:
        height: root.height
        ScreenManager:
            id: screen_manager

            Screen:
                id: annotator_screen
                name: "Annotator"

        MDNavigationDrawer:
            id: nav_drawer
            swipe_edge_width: 0
            elevation: 0

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer